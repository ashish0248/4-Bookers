<h1>Editing Book</h1>
<%= form_for(@book, url:"/books/#{@book.id}") do |f| %>
		<div class="field">
			<label for = "book_title">Title</label><br>
			<%= f.text_field :title, id: "book_title" %>
		</div>
		<div class="field">
			<label for = "book_body">Body</label><br>
			<%= f.text_field :body, id: "book_body" %>
		</div>
			<%= f.submit 'Update Book' %> <br><br>

    <%= link_to 'Show', book_path(@book.id) %> 
     | 
	<%= link_to 'Back', books_path %> 
<% end %>